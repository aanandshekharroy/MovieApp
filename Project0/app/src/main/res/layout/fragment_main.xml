<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.theseus.project0.MainActivityFragment"
    tools:showIn="@layout/activity_main">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="My Nanodegree Apps !"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="268dp"
        android:background="#F08C35"
        android:layout_height="wrap_content"
        android:id="@+id/spotifyStreamer"
        android:text="SPOTIFY STREAMER"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        />

    <Button
        android:layout_width="268dp"
        android:background="#F08C35"
        android:layout_height="wrap_content"
        android:id="@+id/scoresApp"
        android:text="SCORES APP"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp" />
    <Button
        android:layout_width="268dp"
        android:layout_height="wrap_content"
        android:background="#F08C35"
        android:id="@+id/libraryApp"
        android:text="LIBRARY APP"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp" />
    <Button
        android:background="#F08C35"
        android:layout_width="268dp"
        android:layout_height="wrap_content"
        android:id="@+id/buildItBigger"
        android:text="BUILD IT BIGGER"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp" />
    <Button
        android:background="#F08C35"
        android:layout_width="268dp"
        android:layout_height="wrap_content"
        android:id="@+id/xyzReader"
        android:text="XYZ READER"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp" />
    <Button
        android:background="#f0353b"
        android:layout_width="268dp"
        android:layout_height="wrap_content"
        android:id="@+id/capstoneMyOwnApp"
        android:text="CAPSTONE: MY OWN APP"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp" />
</LinearLayout>
